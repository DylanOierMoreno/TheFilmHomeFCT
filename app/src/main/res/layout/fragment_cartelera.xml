<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.peliculas.CarteleraFragment"
    android:id="@+id/fragment_cartelera">

    <ImageButton
        android:id="@+id/btnVistas_Cartelera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="380dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-10dp"
        android:contentDescription="@string/vista_grid"
        android:src="@drawable/ic_list_view"
        android:backgroundTint="@color/white"
        tools:ignore="OnClick,RtlSymmetry"
        app:tint="@android:color/holo_red_dark" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_cartelera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:scrollbars="vertical"/>

</FrameLayout>